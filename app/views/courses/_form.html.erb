<div class="container mt-4 mb-4">

  <%= render 'shared/errors', obj: @course %>

  <div class="row mt-5 justify-content-center">
    <div class="col-6 align-centre">

      <div class="card shadow p-4">
        <%= form_with(model: @course, local: true) do |f| %>
          
          <div class="mb-3">
            <%= f.label :short_name, class: "form-label" %>
            <%= f.text_field :short_name, class: "form-control", placeholder: "Enter a course code ex: CS111" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter a course name" %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class: "form-control", placeholder: "Enter a course description" %>
          </div>

          <div class="mb-3">
            <%= f.label :category, class: "form-label" %>
            <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Please enter the appropriate categories" }, { multiple: true, class: "form-select" }) %>
          </div>
          
          <%= f.submit(@course.new_record? ? "Create" : "Update Course", class: "btn mt-2", id: "login-btn-form") %>
        <% end %>
      </div>

    </div>
  </div>

</div>