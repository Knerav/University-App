<div class="container mt-5">
  
  <div class="row">
    <div class="col">
      
      <h1 class="display-6">
      Courses
      </h1>
      <p class="lead">
      Browse through the courses available to you.
      </p>

    </div>
  </div>

  <div class="row mb-4">
    <% @courses.each do |course| %>
      <div class="col-3 mt-5">

        <div class="card shadow" style="width: 18rem;">
          <div class="card-header">
            <span class="badge rounded-pill bg-danger">SEMESTER-I</span>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= course.short_name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= course.name %></h6>
            <p class="card-text"><%= course.description %></p>
          </div>
          <div class="card-footer">
            <% if logged_in? %>
              <a class="btn btn-success btn-sm">Enroll</a>
            <% end %>
            <a class="btn btn-outline-secondary btn-sm">Info</a>
          </div>
        </div>

      </div>
    <% end %>
  </div>

</div>