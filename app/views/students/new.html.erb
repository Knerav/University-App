
<div class="container mt-5">

  <%= render 'shared/errors', obj: @student %>
  
  <div class="row text-center mb-4">
    <div class="col">
      
      <h1 class="display-6">
      Registration
      </h1>
      <p class="lead">
      Signup to the University Portal using your email
      </p>

    </div>
  </div>

  <div class="row mt-5 justify-content-center">
    <div class="col-6 align-centre">

      <div class="card shadow p-4">
        <%= form_for @student do |f| %>
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter a username" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your student email" %>
          </div>
          <%= f.submit "Signup", class: "btn btn-warning text-dark mt-2" %>
        <% end %>
      </div>

    </div>
  </div>

</div>