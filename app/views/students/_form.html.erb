<div class="container mt-4">

  <%= render 'shared/errors', obj: @student %>

  <div class="row mt-5 justify-content-center">
    <div class="col-6 align-centre">

      <div class="card shadow p-4">
        <%= form_for @student do |f| %>
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter a username" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your student email" %>
          </div>
          <%= f.submit(@student.new_record? ? "Register" : "Update", class: "btn btn-warning mt-2") %>
        <% end %>
      </div>

    </div>
  </div>

</div>