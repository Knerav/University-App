<div class="container mt-4">

  <%= render 'shared/errors', obj: @student %>

  <div class="row mt-5 justify-content-center">
    <div class="col-6 align-centre">

      <div class="card shadow p-4">
        <%= form_for @student do |f| %>
          
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter a username" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your student email" %>
          </div>

          <div class="mb-3">
            <%= f.label(@student.new_record? ? "password" : "password (optional)", class: "form-label") %>
            <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
          </div>
          
          <%= f.submit(@student.new_record? ? "Register" : "Update", class: "btn mt-2", id: "login-btn-form") %>
        <% end %>
      </div>

    </div>
  </div>

</div>