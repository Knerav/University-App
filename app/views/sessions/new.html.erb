<div class="container mt-5">

  <div class="row text-center mb-4">
    <div class="col">
      
      <h1 class="display-6">
      Login
      </h1>
      <p class="lead">
      Welcome to the University Portal
      </p>

    </div>
  </div>

  <div class="row mt-5 justify-content-center">
    <div class="col-6 align-centre">

      <div class="card shadow p-4">
        <%= form_for :sessions do |f| %>
          
          
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your student email" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>
          
          <%= f.submit "Login", class: "btn btn-warning mt-2" %>
        
        <% end %>
      </div>

    </div>
  </div>

</div>